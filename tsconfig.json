{
    "compilerOptions": {
        "target": "ES2021",
        "module": "CommonJS",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": ["@abraham/reflection"],
        "lib": ["ES6"],
        "moduleResolution": "node",
        "outDir": "dist",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true
    }
}
